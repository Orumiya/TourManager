<UserControl x:Class="HappyTourManager.PieChartUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HappyTourManager"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border Background="{StaticResource ForegroundLight}" Opacity="0.8" CornerRadius="5">
    <Grid >
            <lvc:PieChart LegendLocation="Bottom" Series="{Binding SeriesCollection}" DataClick="Chart_OnDataClick" Hoverable="False" DataTooltip="{x:Null}">
            </lvc:PieChart>
        </Grid>
    </Border>
</UserControl>
